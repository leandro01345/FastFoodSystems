<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastFoodProject.GerentePaginas"
      xmlns:FastFoodProject="clr-namespace:FastFoodProject" x:Class="FastFoodProject.GerentePaginas.MantenedorProductos"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Mantenedor_Productos">

    <Page.Resources>
        <FastFoodProject:FastFoodDataSet x:Key="fastFoodDataSet"/>
        <CollectionViewSource x:Key="productoViewSource" Source="{Binding Producto, Source={StaticResource fastFoodDataSet}}"/>
    </Page.Resources>

    <Grid>
        <GroupBox x:Name="groupBox" Header="Mantenedor de productos: Edita y modifica la información de tus productos aquí." Margin="0,-6,0,6"/>
        <TabControl x:Name="tabControl" Margin="0,31,0,0">
            <TabItem Header="Agregar nuevo producto" Background="White" BorderBrush="White">
                <Grid Background="#E5000000" Margin="0,0,0,-1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblProducto" Content="Agregar Producto" HorizontalAlignment="Left" Margin="55,22,0,0" VerticalAlignment="Top" Width="184" BorderBrush="Black" Foreground="#DDF5F1F1" FontFamily="Rockwell" FontSize="20"/>
                    <Label x:Name="lblNombre" Content="Nombre:" HorizontalAlignment="Left" Margin="34,60,0,0" VerticalAlignment="Top" Width="75" Foreground="#DDF1E3E3" FontFamily="Rockwell" FontSize="14"/>
                    <Label x:Name="lblCantidad" Content="Cantidad:" HorizontalAlignment="Left" Margin="34,111,0,0" VerticalAlignment="Top" Width="75" Foreground="#DDF0E1E1" FontFamily="Rockwell" FontSize="14"/>
                    <Label x:Name="lblValor" Content="Valor:" HorizontalAlignment="Left" Margin="34,159,0,0" VerticalAlignment="Top" Width="75" Foreground="#DDF7F1F1" FontFamily="Rockwell" FontSize="14"/>
                    <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="28" Margin="109,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFECE6E6"/>
                    <TextBox x:Name="txtCantidad" HorizontalAlignment="Left" Height="28" Margin="109,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFE8E6E6"/>
                    <TextBox x:Name="txtValor" HorizontalAlignment="Left" Height="28" Margin="109,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFEEE9E9" Text="0"/>
                    <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="305,99,0,0" VerticalAlignment="Top" Width="101" RenderTransformOrigin="0.275,-0.545" FontFamily="Rockwell" FontSize="16" Click="btnAgregar_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Editar producto">
                <Grid Background="#E5000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblActualizar" Content="Actualizar Producto" HorizontalAlignment="Left" Margin="47,12,0,0" VerticalAlignment="Top" Width="202" BorderBrush="Black" Foreground="#DDF5F1F1" FontFamily="Rockwell" FontSize="20"/>
                    <Label x:Name="lblNombreUpdate" Content="Nombre:" HorizontalAlignment="Left" Margin="41,93,0,0" VerticalAlignment="Top" Width="87" Foreground="#DDF1E3E3" FontFamily="Rockwell" FontSize="14"/>
                    <Label x:Name="lblCantidadUpdate" Content="Cantidad:" HorizontalAlignment="Left" Margin="41,127,0,0" VerticalAlignment="Top" Width="87" Foreground="#DDF0E1E1" FontFamily="Rockwell" FontSize="14"/>
                    <Label x:Name="lblValorUpdate" Content="Valor:" HorizontalAlignment="Left" Margin="41,161,0,0" VerticalAlignment="Top" Width="87" Foreground="#DDF7F1F1" FontFamily="Rockwell" FontSize="14"/>
                    <TextBox x:Name="txtNombreUpdate" HorizontalAlignment="Left" Height="26" Margin="146,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFECE6E6"/>
                    <TextBox x:Name="txtCantidadUpdate" HorizontalAlignment="Left" Height="26" Margin="146,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFE8E6E6" Text="0"/>
                    <TextBox x:Name="txtValorUpdate" HorizontalAlignment="Left" Height="26" Margin="146,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFEEE9E9" Text="0"/>
                    <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="386,45,0,0" VerticalAlignment="Top" Width="75" FontFamily="Rockwell" FontSize="16" Click="btnBuscar_Click"/>
                    <Button x:Name="btnUpdate" Content="Actualizar" HorizontalAlignment="Left" Margin="386,141,0,0" VerticalAlignment="Top" Width="115" FontFamily="Rockwell" FontSize="16" Click="btnUpdate_Click"/>
                    <Label x:Name="lblId" Content="Id Producto:" HorizontalAlignment="Left" Margin="41,58,0,0" VerticalAlignment="Top" Width="87" FontFamily="Rockwell" FontSize="14" Foreground="#DDFBEEEE"/>
                    <TextBox x:Name="txtId" HorizontalAlignment="Left" Height="26" Margin="146,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Background="#FFF7F1F1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Lista de productos" Margin="-2,-2,-2,0">
                <Grid Background="#E5190E18" DataContext="{StaticResource productoViewSource}">
                    <DataGrid x:Name="productoDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="idColumn" Binding="{Binding id_producto}" Header="ID" Width="100"/>
                            <DataGridTextColumn x:Name="nombreColumn" Binding="{Binding nombre}" Header="Nombre" Width="150"/>
                            <DataGridTextColumn x:Name="valorColumn" Binding="{Binding valor}" Header="Precio" Width="100"/>
                            <DataGridTextColumn x:Name="idPedidoColumn" Binding="{Binding pedido_id_pedido}" Header="Pedido N°" Width="150"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
