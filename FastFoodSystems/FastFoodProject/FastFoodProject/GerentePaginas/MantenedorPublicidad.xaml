<Page x:Class="FastFoodProject.GerentePaginas.MantenedorPublicidad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastFoodProject.GerentePaginas"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Mantenedor_Publicidad">

    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="251" Margin="10,39,0,0" VerticalAlignment="Top" Width="580">
            <TabItem Header="Agregar Nueva publicidad" Background="White" BorderBrush="White">
                <Grid Background="#E5190E18"/>
            </TabItem>
            <TabItem Header="Editar publicidades">
                <Grid Background="#E5190E18"/>
            </TabItem>
            <TabItem Header="Lista de publicidades" Margin="-2,-2,-2,0">
                <Grid Background="#E5190E18"/>
            </TabItem>
        </TabControl>
        <GroupBox x:Name="groupBox" Header="Mantenedor de publicidad: edite y gestione la publicidad aquí." HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="600"/>

    </Grid>
</Page>
