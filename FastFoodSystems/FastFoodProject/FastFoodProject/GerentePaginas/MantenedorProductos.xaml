<Page x:Class="FastFoodProject.GerentePaginas.MantenedorProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastFoodProject.GerentePaginas"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Mantenedor_Productos">

    <Grid>
        <GroupBox x:Name="groupBox" Header="Mantenedor de productos: Edita y modifica la linformacion de tus productos aquí.">
            <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="239" Margin="0,10,0,-1" VerticalAlignment="Top" Width="600">
                <TabItem Header="Agregar nuevo producto" Background="White" BorderBrush="White">
                    <Grid Background="#E5190E18"/>
                </TabItem>
                <TabItem Header="Editar producto">
                    <Grid Background="#E5190E18"/>
                </TabItem>
                <TabItem Header="Lista de productos" Margin="-2,-2,-2,0">
                    <Grid Background="#E5190E18"/>
                </TabItem>
            </TabControl>
        </GroupBox>

    </Grid>
</Page>
